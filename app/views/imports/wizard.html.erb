<div class="ui grid">
  <div class="eight wide column">
    <h3>Import Wizard</h3>
  </div>
  <div class="right aligned eight wide column">

  </div>
</div>
<hr/>
<br>

<div class="card shadow-sm bordered p-4">
  <%= form_with(model: @importer, url: import_zip_path, multipart: true, html: {class: "form"}) do |form| %>
    <div class="form-group">
      <div class="input-group">
        <div class="custom-file">
          <%= form.file_field 'zip_file', class: "custom-file-input", id: "import-zip-input", accept: 'application/zip' %>
          <%= form.label '', nil, class: "custom-file-label" %>
        </div>
        <div class="input-group-append">
          <%= submit_tag("Upload", class: "btn btn-sm btn-purple") %>
        </div>
        <br>

      </div>
      <div id="emailHelp" class="form-text text-muted text-center">
        <em>Import your zip file and add your notes to wreeto.</em>
      </div>

    </div>
  <% end %>

</div>
