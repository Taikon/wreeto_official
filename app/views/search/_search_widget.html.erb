<!-- Search -->
<div class="search_modal modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
    <div class="modal-content p-0">
      <div class="row">
        <div class="col-12">
          <%= form_tag search_path, method: "get", class: "search_form", remote: false do %>
            <div class="input-group input-group-lg">
              <div class="input-group-prepend bg-white">
                <span class="input-group-text" id="inputGroup-sizing-lg">
                  <i class="fa fa-search" id="inputGroup-sizing-lg"></i>
                </span>
              </div>
              <input type="text"
                    name="search"
                    id="search"
                    placeholder="Search <%= current_user.notes.size %> inventory notes stored in the DB"
                    class="form-control search-input"
                    autocomplete="off"
                    autofocus="autofocus"
                    aria-label="Large" 
                    aria-describedby="inputGroup-sizing-lg"
                    >
            </div>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <ul class="list-group list-group-flush search_results px-2">
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>