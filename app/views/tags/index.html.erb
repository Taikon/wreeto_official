<div class="row">
  <div class="col-2">
    <h3>Tags</h3>
  </div>
  <div class="col-10 text-right">
    <%# add_tag_button %>
     <%= link_to 'ADD NEW TAG'.html_safe,
                      "#",
                      class: "btn btn-sm btn-purple",
                      data: { toggle: "modal", target: "#add-tag".html_safe, turbolinks: false }
                      %>
  </div>
</div>

<hr/>
<br>

<% if @tags.any? %>
  <%= render partial: 'tag_list', locals: {tags: @tags} %>
<% else %>
  <%= blank_slate(:tags) %>
  <%= render partial: 'add_modal' %>
<% end %>